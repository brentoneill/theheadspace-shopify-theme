<div class="home-product-custom">
  <div class="container">
    <div class="row">
      {% if section.settings.title != blank %}
        <div class="section-header text-center">
          <h2>{{ section.settings.title | escape }}</h2>
        </div>
      {% endif %}
      
      {%- assign collection = collections[section.settings.collection] -%}

      <div class="grid grid--uniform grid--view-items home-productscustom">
        {% for product in collections[section.settings.collection].products limit: 9 %}              
              {% if forloop.index == 2 or forloop.index == 3 or forloop.index == 4 or forloop.index == 5 %}                
                {% if forloop.index == 2 %}
                 <div class="left-block">                    
                {% endif %}
                   <div class="product-element product-item-wrapper col-sm-6">
                     {% include 'index_smallitems' %}
                   </div>
                {% if forloop.index == 5 or forloop.last == true %}
                  </div>
                {% endif%}
              {% endif %}
              {% if forloop.index == 1%}
                <div class="middle-block product-item-wrapper">
                  {% include 'index_bigitems' %}
                </div>
              {% endif %}
              {% if forloop.index == 6 or forloop.index == 7 or forloop.index == 8 or forloop.index == 9 %}
            	{% if forloop.index == 6 %}
                 <div class="right-block">                    
                {% endif %}
                   <div class="product-element product-item-wrapper col-sm-6">
                     {% include 'index_smallitems' %}
                   </div>
                {% if forloop.index == 9 or forloop.last == true %}
                  </div>
                {% endif%}
              {% endif%}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Custom",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured Product"
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    }    
  ],
  "presets": [
    {
      "name": "Product Custom",
      "category": "Collection"
    }
  ]
}
{% endschema %}


{% stylesheet %}

{% endstylesheet %}
